{
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "impliedStrict": true,
    "project": "./jsconfig.json",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "react-app",
    "eslint:recommended",
    "prettier",
    "plugin:json/recommended",
    "plugin:react/recommended",
    "plugin:jest/recommended",
    "plugin:cypress/recommended"
  ],
  "plugins": ["json", "react", "jest", "cypress"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react/react-in-jsx-scope": 0,
    "react/jsx-pascal-case": 0,
    "jest/expect-expect": 0
  },
  "globals": {
    "React": "writable"
  }
}
